<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('includes/head',{ title : "Login page" }) %>

        <!-- CSS -->
        <link rel="stylesheet" href="/styles/login.css">

        <!-- Boostrap JS -->
        <script src="/scripts/bootstrap.min.js"></script>

</head>

<body style="background-image: url('/images/states-seasons-background.jpg'); background-size: cover;">

    <%- include('includes/nav-bar') %>

        <form action="/login/StateSeason" method="post" class="form" style="background-color: rgba(255, 255, 255,0.7);">

            <div class="row">

                <label for="state">Choose a State</label>

                <select name="state" id="state">
                    <% for(const state of states) { %>

                        <option value="<%= state %>">
                            <%= state %>
                        </option>

                        <% } %>
                </select>


                <label for="season">Choose a Season</label>

                <select name="season" id="season">
                    <% for(const season of seasons) { %>

                        <option value="<%= season %>">
                            <%= season %>
                        </option>

                        <% } %>
                </select>
            </div>

            <button type="submit" id="submit">Submit</button>
        </form>


</body>
